#!/bin/sh

WAL="$HOME/.cache/wal/colors.json"
[ -f "$WAL" ] || exit 0

BG=$(jq -r '.special.background' "$WAL")

# Convert hex to RGB brightness
R=$((16#${BG#\#0:2}))
G=$((16#${BG#\#2:2}))
B=$((16#${BG#\#4:2}))

BRIGHTNESS=$(( (R*299 + G*587 + B*114) / 1000 ))

if [ "$BRIGHTNESS" -lt 90 ]; then
  OPACITY="0.92"
elif [ "$BRIGHTNESS" -lt 140 ]; then
  OPACITY="0.85"
else
  OPACITY="0.75"
fi

sed "s/^@define-color barOpacity.*/@define-color barOpacity rgba(0,0,0,$OPACITY);/" \
  ~/.config/waybar/colors.css.in > ~/.config/waybar/colors.css
